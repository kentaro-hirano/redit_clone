<div class="row mb-4">
  <div class="col-sm-8">
    <h3><%= @community.name %></h3>
  </div>
  <div class="col-sm-4">
    <% if @is_subscribed %>
      <%= link_to "Create new Post", new_community_post_path(@community), class: "btn btn-primary float-right" %>
    <% else %>
      <%= render "communities/subscribe", subscription: @subscription, community: @community %>
    <% end %>
  </div>
</div>
<div class="container">
    <div class="row">
    <div class="col-sm-8">
      <%= render "posts/list", posts: @posts %>
    </div>
    <div class="col-sm-4">
      <div class="card p-3">
        <p class="mt-2"><%= @community.summary %></p>
        <p><%= pluralize @subscriber_account, "member" %></p>
      </div>
      <small>
          <p><%= simple_format @community.rules %></p>
      </small>
    </div>
  </div>
</div>

